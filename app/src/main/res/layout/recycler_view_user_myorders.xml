<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        style="@style/CardDefault"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProducer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:src="@drawable/logo_feira_dagua_remove"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/backgroundColor"
                app:civ_border_width="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/viewSeparator1"
                app:layout_constraintEnd_toStartOf="@id/tvProducerName"/>

            <TextView
                android:id="@+id/tvProducerName"
                style="@style/TextViewSubTitleRecyclerView"
                android:text="Produtor"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toEndOf="@id/ivProducer"
                app:layout_constraintTop_toTopOf="@id/ivProducer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ivProducer"/>

            <View
                android:id="@+id/viewSeparator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintStart_toStartOf="@id/ivProducer"
                app:layout_constraintEnd_toEndOf="@id/tvProducerName"
                app:layout_constraintTop_toBottomOf="@id/ivProducer"
                app:layout_constraintBottom_toTopOf="@id/tvOrderDate"/>

            <TextView
                android:id="@+id/tvOrderDate"
                style="@style/TextViewSubTitleRecyclerView"
                android:text="Data: 25/08/2021"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                app:layout_constraintStart_toStartOf="@id/ivProducer"
                app:layout_constraintTop_toBottomOf="@id/viewSeparator1"
                app:layout_constraintEnd_toEndOf="@id/tvProducerName"
                app:layout_constraintBottom_toTopOf="@id/tvOrderStatus"/>

            <TextView
                android:id="@+id/tvOrderStatus"
                style="@style/TextViewSubTitleRecyclerView"
                android:text="Pedido Aceito"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/ivProducer"
                app:layout_constraintTop_toBottomOf="@id/tvOrderDate"
                app:layout_constraintEnd_toEndOf="@id/tvProducerName"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>